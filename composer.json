{
  "name": "ryunosuke/db-describer",
  "description": "Generate Database.xlsx, ERD.pdf",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "repositories": [
    {
      "url": "https://github.com/arima-ryunosuke/dbal.git",
      "type": "vcs"
    }
  ],
  "bin": [
    "bin/describe"
  ],
  "require": {
    "php": ">=7.2",
    "symfony/console": "3.*",
    "doctrine/dbal": "2.10.x-dev",
    "alom/graphviz": "1.1.*",
    "ryunosuke/php-excelate": "1.0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\DbDescriber\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test/"
    }
  },
  "scripts": {
    "build": [
      "@composer test",
      "@composer clean",
      "@composer pharize"
    ],
    "coverage": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml --coverage-html=tests/coverage"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "clean": [
      "@php bin/clean.php"
    ],
    "pharize": [
      "@composer dump-autoload --no-dev",
      "bin/box.phar build -c box.json",
      "@composer dump-autoload"
    ]
  }
}
